<div id="institution_search_form">
  <%= form_tag search_action_url, method: :get,
               class: 'search-query-form form-inline institution-search',
               role: 'search', 'aria-label' => t('blacklight.search.form.submit') do %>
      <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page)) %>

      <div class="input-group">
        <label for="q_inst" class="sr-only"><%= t('blacklight.search.form.institution') %></label>
        <%= text_field_tag :q,
                           params[:q],
                           placeholder: t('blacklight.search.form.institution'),
                           class: 'search_q q form-control',
                           id: 'q_inst',
                           autofocus: false %>
        <div class="input-group-append">
          <button type="submit" class="btn btn-primary search-btn" id="institution-search">
            <span class="submit-search-text sr-only"><%= t('blacklight.search.form.submit') %></span>
            <%= blacklight_icon :search, aria_hidden: true %>
          </button>
        </div>
      </div>
  <% end %>
</div>
