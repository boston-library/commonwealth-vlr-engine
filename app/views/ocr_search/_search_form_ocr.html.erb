<div id="ocr_search_form_wrapper">
    <%= form_tag ocr_search_path,
                 :method => :get,
                 :class => 'ocr-search-form',
                 :data => {:ajax_modal => 'preserve'} do %>
        <%= render_hash_as_hidden_fields(params_for_search(:id => params[:id]).except('q', 'ocr_q', 'search_field', 'qt', 'page')) %>

        <div class="input-group pull-left">
          <label for="q_ocr" class="sr-only"><%= t('blacklight.ocr.search.form.q') %></label>
          <%= text_field_tag :ocr_q,
                             nil,
                             :placeholder => t('blacklight.ocr.search.form.q'),
                             :class => 'search_q q form-control',
                             :id => 'ocr_q'%>
          <span class="input-group-btn">
                  <button type="submit" class="btn btn-primary search-btn" id="search">
                    <span class="submit-search-text"><%=t('blacklight.search.form.submit')%></span>
                    <span class="glyphicon glyphicon-search glyphicon-white"></span>
                  </button>
          </span>
        </div>

    <% end %>
</div>