<%= form_tag search_action_url, method: :get, class: '', id: 'header-search-form',
             'aria-label' => t('blacklight.search.form.submit') do %>
    <%= render_hash_as_hidden_fields(search_state.params_for_search(search_field: default_search_field[:key]).except('q', 'qt', 'page', 'utf8', 'f', 'sort', 'mlt_id', 'coordinates', 'spatial_search_type', 'view', 'range', 'date_start', 'date_end')) %>

    <div class="input-group">
      <label for="q" class="visually-hidden"><%= t('blacklight.search.form.search.label') %></label>
      <%= text_field_tag :q,
                         nil,
                         placeholder: t('blacklight.search.form.search.placeholder'),
                         class: 'search_q q form-control form-control-xs',
                         id: 'q',
                         data: { autocomplete_enabled: autocomplete_enabled?,
                                 autocomplete_path: suggest_index_catalog_path } %>
      <div class="">
        <button type="submit" class="btn btn-primary search-btn btn-xs" id="search">
          <span class="submit-search-text visually-hidden"><%= t('blacklight.search.form.submit') %></span>
          <%= blacklight_icon :search, aria_hidden: true %>
        </button>
      </div>
    </div>
<% end %>
