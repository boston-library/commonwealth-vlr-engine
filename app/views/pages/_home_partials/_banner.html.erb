<%# the banner for the carousel and search box %>
<div id="content_home_banner" class="row">

  <div id="carousel_wrapper" class="col-md-6">
    <% if params[:controller] == 'catalog' %>
        <%= render partial: 'pages/carousel', locals: { carousel_slides: carousel_slides } %>
    <% else %>
        <%= render partial: 'pages/carousel', locals: { carousel_slides: @carousel_slides } %>
    <% end %>
  </div>

  <div id="hero_search_wrapper" class="col-md-6">
    <div id="hero_search" class="jumbotron">
      <div id="hero_search_headline">
        <h1>
          <%= t('blacklight.home.banner.center_text') %>
        </h1>
      </div>
      <div id="hero_search_form">
        <%= render_search_bar %>
      </div>
    </div>
  </div>
</div>
