  <h2>
    <%= t('blacklight.users.account_heading') %>
  </h2>

  <ul id="user_account_links_list">
    <li>
      <h4><%= link_to t('blacklight.header_links.folders'), folders_path %></h4>
      <%= t('blacklight.folders.intro') %>
    </li>
    <li>
