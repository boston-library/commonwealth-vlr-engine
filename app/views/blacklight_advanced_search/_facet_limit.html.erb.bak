<div class="advanced_facet_limit">
  <div class="inclusive_or">
    <h4>Any of:</h4>
    <ul>
      <% advanced_query.filters[solr_field].each do |value| %>
          <li><span class="selected"><%= h(value) %></span> <%= link_to(content_tag(:span, '', :class => 'glyphicon glyphicon-remove') + content_tag(:span, '[remove]', :class => 'sr-only'), remove_advanced_facet_param(solr_field, value, params), :class => 'remove') %></li>
      <% end %>
    </ul>
  </div>

  <%= render_facet_limit display_facet, :layout => nil, :partial => advanced_search_facet_partial_name(display_facet) %>
</div>