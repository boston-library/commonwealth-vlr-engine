<%# check for search params %>
<% if has_search_parameters? %>
  <% content_for(:sidebar) do %>
    <%= render 'search_sidebar' %>
  <% end %>

  <%= render 'search_results' %>
<% else %>
    <%# if no input/search params, render basic_search partial %>
  <%= render 'catalog/basic_search' %>
<% end %>
