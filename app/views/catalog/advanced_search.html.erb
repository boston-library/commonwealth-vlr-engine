<%# override so we can add tabbed layout for basic + advanced search %>
<% @page_title = t('blacklight.advanced_search.page_title', application_name: application_name) %>

<div class="advanced-search-form col-sm-12">
  <h1 class="advanced page-header">
      <%= t('blacklight.advanced_search.form.title') %>
  </h1>

  <ul id="search_mode_tabs" class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to t('blacklight.search.nav.basic'), search_catalog_path, class: 'nav-link' %>
    </li>
    <li  class="nav-item"><a href="#" class="nav-link active"><%= t('blacklight.search.nav.advanced') %></a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="advanced_search_wrapper">
      <div class="row">
        <div class="col-md-8">
          <%= render 'advanced_search_form' %>
        </div>

        <div class="col-md-4">
          <%= render "advanced_search_help" %>
        </div>
      </div>
    </div>
  </div>
</div>
