<div class="more_like_this_document col-sm-3">
  <%= link_to(create_thumb_img_element(document, %w(mlt_thumb)),
              url_for_document(document),
              class: 'mlt_thumb_link thumbnail',
              title: document[blacklight_config.index.title_field.field]
      )
  %>
  <%= link_to_document(document,
                       truncate(render_title(document), length: 70, separator: ' ', omission: ' ...'),
                       class: 'mlt_title_link') %>
</div>
