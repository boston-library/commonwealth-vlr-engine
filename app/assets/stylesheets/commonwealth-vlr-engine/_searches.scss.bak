/* styles for search history and saved searches views */

#searches_content, #search_history_content {

  h2 {
    margin-bottom: 0;
  }

  h3 {
    font-size: $h5-font-size;
    margin-top: 15px;
  }

  .constraint {
    padding-right: 10px;
    display: block;

    .filter-name {
      padding-right: 5px;
    }
  }

}

#searches_content {

  #empty_saved_searches {
    @include card-esque(10px);
    margin-top:20px;
  }

}

#search_history_content {

  #empty_search_history {
    @include card-esque(10px);
    margin-top:20px;
  }


  td.query {
    width: 70%;
  }

  td.actions {
    text-align: right;
  }

}
