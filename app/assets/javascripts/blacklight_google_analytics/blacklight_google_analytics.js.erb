            var action = BlacklightGoogleAnalytics.this_or_parent_id($(this));
            var label = '';
            BlacklightGoogleAnalytics.track_event(undefined, action, label);
        } catch(err) {
            BlacklightGoogleAnalytics.console_log_error(err, [category, action, label]);
        }
    })
    */
});
