<div id="item_metadata">
  <h3><%= t('blacklight.metadata_display.title') %></h3>
  <dl class="row document-metadata">
    <%# title field %>
    <% if document[blacklight_config.index.title_field.field] %>
      <dt class="col-md-3"><%= t('blacklight.metadata_display.fields.title') %>:</dt>
      <dd class="col-md-9">
        <%= helpers.render_title(document) %>
      </dd>
    <% end %>
    <%= render CommonwealthVlrEngine::Document::MetadataFieldComponent.new(
      document: document, field_name: document[blacklight_config.index.title_field.field],
      field_key: 'title', helper_method: :render_title
    ) %>
    <!--
      ARGS NEEDED
      solr field name
      I18n field key
      multiple values boolean ?
      link_to_facet ?
      special rendering method
      special rendering method args
    -->
  </dl>
</div>