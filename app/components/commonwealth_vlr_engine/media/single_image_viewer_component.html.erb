<div id="img_show_container" class="row">
  <div id="img_show_canvas">
    <%= link_to '#',
                id: 'img_show_zoom_cue',
                title: t('blacklight.images.zoom'),
                rel: 'nofollow' do %>
      <% content_tag :i, '', class: 'img_zoom_icon fa fa-search-plus' %>
    <% end %>
    <%= link_to(image_tag(helpers.filestream_disseminator_url(image_key, 'image_access_800'),
                          alt: document[helpers.blacklight_config.index.title_field.field],
                          class: 'img_show'),
                '#', id: 'img_viewer_link',
                class: 'img_viewer_link',
                title: t('blacklight.images.zoom'),
                rel: 'nofollow') %>
  </div>

  <%# render partial: 'catalog/_show_partials/show_default_simple_img_viewer',
             locals: { object_title: document[blacklight_config.index.title_field.field].html_safe,
                       image_key: image_key } %>
</div>